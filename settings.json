{
    "editor.formatOnSave": false,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript"
    ],
    "git.ignoreMissingGitWarning": false,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "explorer.autoReveal": false,
    "files.eol": "\n",
    "workbench.colorTheme": "Monokai Dimmed",
    "explorer.decorations.badges": true,
    "workbench.statusBar.feedback.visible": false,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\sysnative\\bash.exe",
    "workbench.colorCustomizations": {
        "gitDecoration.ignoredResourceForeground": "#cccccc50",
        "editorWhitespace.foreground": "#776d6d1a",
        "editorLineNumber.foreground": "#6e6e6e5d",
        "editor.selectionBackground": "#cccccc40",
        "editor.selectionHighlightBackground": "#cccccc15",
        "editorLineNumber.activeForeground": "#ffffff",
        "editorIndentGuide.background": "#66666617",
        "editorIndentGuide.activeBackground": "#6666663f"
    },

    // turn off all the auto crap and let me code in peace
    // "editor.hover.enabled": false, // will also hide lint errors
    // "javascript.suggestionActions.enabled": false,
    "editor.autoClosingBrackets": "never",
    "workbench.editor.enablePreview": false,
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.quickSuggestions": {
    //     "other": false,
    //     "comments": false,
    //     "strings": false
    // },
    "html.autoClosingTags": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "window.menuBarVisibility": "toggle",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.startupEditor": "newUntitledFile",
    "breadcrumbs.symbolPath": "off",
    "workbench.editor.labelFormat": "medium",
    "window.title": "${rootName} -> ${dirty}${activeEditorMedium}",
    "search.location": "panel",
}
